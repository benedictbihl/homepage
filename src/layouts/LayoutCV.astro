---
import Footer from "../components/Footer.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
import "../styles/base.css";
import "@fontsource-variable/rubik";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="bg-background/80 print:bg-transparent" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Benedicts CV" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <nav
      aria-label="Header"
      class="sticky top-0 px-6 py-4 print:hidden bg-background flex justify-between"
    >
      <ul class="flex justify-between">
        <li class="mr-4 hover:text-primary">
          <a class=`${currentPath === "" && "underline"}` href="/">‚Üê Home</a>
        </li>
      </ul>
      <ul class="flex gap-4">
        <li class="after:content-['|'] after:ml-4">
          <a
            class=`hover:text-primary ${currentPath === "cv_en" && "underline"}`
            href="/cv_en">EN</a
          >
        </li>
        <li>
          <a
            class=`hover:text-primary ${currentPath === "cv_de" && "underline"}`
            href="/cv_de">DE</a
          >
        </li>
      </ul>
    </nav>
    <main class="max-w-3xl m-auto md:my-8 p-6 md:p-2">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Rubik Variable", sans-serif;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
